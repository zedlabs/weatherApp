<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="ml.zedlabs.weatherapptask.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="ml.zedlabs.weatherapptask.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/listFragment"
        android:name="ml.zedlabs.weatherapptask.ui.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/listToSearch"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/listToDetails"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="ml.zedlabs.weatherapptask.ui.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="wData"
            app:argType="ml.zedlabs.weatherapptask.repository.models.CityWeatherData" />
    </fragment>
</navigation>